@model EntityLayer.Concrete.Shop
@{
    ViewData["Title"] = "AddShop";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi Tablosu</h3>
</div>
<form class="form-group " style="margin-left: 1rem; margin-right: 1rem;" method="post">
    

    <label> Firma Adı</label> 
    <input type="text" name="Name" class="form-control" />
    @Html.ValidationMessageFor(x=>x.ShopTitle,"",new{@class="text-danger", @style="font-size:12px;"})<br />@*name'ler veritabanı ile aynı olmalı'*@
    <br />
    <label> Açıklama</label>
    <input type="text" name="Description" class="form-control" />
    @Html.ValidationMessageFor(x=>x.ShopHover,"",new{@class="text-danger", @style="font-size:12px;"}) <br />
    <br />
    <label> Tarih</label>
    <input type="text" name="Date" class="form-control" />
    @Html.ValidationMessageFor(x=>x.ShopPrice,"",new{@class="text-danger ", @style="font-size:12px;"})<br />
    <br />
    <label> Image Url</label>
    <input type="text" name="ShopImage"
        class="form-control" />
    @Html.ValidationMessageFor(x=>x.ShopTitle,"",new{@class="text-danger", @style="font-size:12px;"})<br />
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button> <br />
    
</form>


