@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Contact>



<!--contact -->
<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Contact US</h3>
        <div class="contact-list-grid">
            <h1 style="text-align:center;">İletişim</h1>
            <form action="#" method="post">
                @foreach (var item in Model)
               {

                <div class=" agile-wls-contact-mid">
                    <div class="form-group contact-forms">
                        <input type="text" class="form-control" placeholder="Adınız Soyadınız">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="email" class="form-control" placeholder="Mail Adresiniz">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="text" class="form-control" placeholder="Telefon Numaranız">
                    </div>
                    <div class="form-group contact-forms">
                        <textarea class="form-control" rows="3" placeholder="Mesajınız..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-block sent-butnn">Gönder</button>
                </div>
                }
            </form>
        </div>
    </div>
</section>
