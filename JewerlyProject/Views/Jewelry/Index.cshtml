    @foreach (var item in Model)
    {
        <div class="callbacks_container">
            <ul class="rslides" id="slider4">
                <li>
                    <div class="slider-img one-img">
                        <div class="container">
                            <div class="slider-info ">
                                <h5>@item.SliderTitle</h5>
                                <div class="bottom-info">
                                    <p>
                                        @item.SliderComment
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </li>

            </ul>


        </div>
        <div class="clearfix"></div>
    }
</div>

