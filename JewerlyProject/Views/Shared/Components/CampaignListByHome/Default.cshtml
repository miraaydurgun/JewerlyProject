@model IEnumerable<EntityLayer.Concrete.Campaign>


<section class="about py-lg-4 py-md-3 py-sm-3 py-3" id="about">
	<div class="container py-lg-5 py-md-5 py-sm-4 py-4">

        <h3 class="title text-center mb-lg-5 mb-md-4  mb-sm-4 mb-3">Kampanya</h3>			<div class="row banner-below-w3l">

		@foreach (var item in Model)
		{
				<div class="col-lg-4 col-md-6 col-sm-6 text-center banner-agile-flowers">
					<img src=@item.CampaignImage class="img-thumbnail" alt="">
					<div class="banner-right-icon">
						<h4 class="pt-3">@item.CampaignComment</h4>
					</div>
				</div>
				@*Resimlerin üzerindeki Kampanya Yazısı*@
				<div class="toys-grids-upper">
					<div class="about-toys-off">
						<h2>@item.CampaignTitle</h2>
					</div>
				</div>
				@*Resimlerin üzerindeki Kampanya Yazısı*@
            }
        </div>

	</div>
</section>