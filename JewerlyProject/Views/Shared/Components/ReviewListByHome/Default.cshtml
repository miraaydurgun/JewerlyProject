@model IEnumerable<EntityLayer.Concrete.Review>

<section class="clients py-lg-4 py-md-3 py-sm-3 py-3" id="clients">
    <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
        <h3 class="title clr text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Öne Çıkan Mağaza Yorumları</h3>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">

                <div class="carousel-item active">

                    <div class="row">
                         @foreach (var item in Model)
                                    {

                        <div class="col-lg-6 clients-w3layouts-row">

                            <div class="least-w3layouts-text-gap">

                                <div class="row">
                                   
                                        <div class="col-md-8 col-sm-8 clients-says-w3layouts">
                                            <h4>
                                                @item.ReviewName
                                            </h4>
                                            <p class="date"><b>@item.ReviewDate</b></p>

                                            <div class="mt-3 news-agile-text">

                                                <p style="font-size:0.7rem;">@item.ReviewMail</p>

                                            </div>

                                            <div class="mt-3 news-agile-text">
                                                <p class="mt-3">
                                                    <span class="fas fa-quote-left"></span>
                                                    @item.ReviewComment

                                                    <span class="fas fa-quote-right"></span>
                                                </p>
                                            </div>
                                        </div>
                                    
                                </div>

                            </div>

                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>

                        </div>
}
                    </div>

                </div>

            </div>

        </div>


    </div>

</section>