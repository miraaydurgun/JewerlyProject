@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Shop>


<link rel="stylesheet" href="~/web/css/fontawesome-all.min.css">
<!-- banner -->
<div class="inner_page-banner">
</div>
<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Ürünlerimiz</h3>

    @*Filtre menüsü*@

    <div class="filtre-menu">
        <a href="#">Kolye </a>
        <a href="#">Bileklik</a>
        <a href="#">Yüzük</a>
        <a href="#">Küpe</a>
        <a href="#">Şahmeran</a>
        <a href="#">Piercing</a>
    </div>
    @*Filtre menüsü*@
    <br /><br />
    <div class="row">
        <div class="left-ads-display col-lg-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6 product-men women_two">
                        <div class="product-toys-info">
                            <div class="men-pro-item">
                                <div class="men-thumb-item">
                                    <img src="@item.ShopImage" class="img-thumbnail img-fluid" alt="">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="/Shop_Single/Index" class="link-product-add-cart">@item.ShopHover</a>
                                            @*  hover yani Gözata basıldığında ilgili görselin shop_single sayfası açılacak
                                        *@
                                        </div>
                                    </div>
                                    <span class="product-new-top">Yeni</span>
                                </div>
                                <div class="item-info-product">
                                    <div class="info-product-price">
                                        <div class="grid_meta">
                                            <div class="product_price">
                                                <h4>
                                                    <a href="shop_single.html">@item.ShopTitle</a>
                                                </h4>
                                                <div class="grid-price mt-2">
                                                    <span class="money ">@item.ShopPrice</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="toys single-item hvr-outline-out">
                                            <form action="#" method="post">
                                                <input type="hidden" name="cmd" value="_cart">
                                                <input type="hidden" name="add" value="1">
                                                <input type="hidden" name="toys_item" value=@item.ShopTitle>
                                                <input type="hidden" name="amount" value=@item.ShopPrice>
                                                    <button type="submit" class="toys-cart ptoys-cart">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    </div>
</section>


